<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Weather App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/style.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
</head>
<body>
    <h1>Your Weather Forcast <br> Companion </h1>
    <div class="main-container">
        <form action="/weather" method="GET">
            <div class="search-bar">
                <input  name="city" placeholder="City..."/>
                <button type="submit" title="submit"> <i class="fa fa-search"></i> </button>
            </div>
        </form>
        <div class="info-container">
            <script>
                let weatherData;
                let weatherStatus;

                if (Object.keys(<%- JSON.stringify(weather) %>).length === 0) {
                    weatherStatus = 'No Data Yet';
                } else {
                    weatherData = JSON.parse('<%- JSON.stringify(weather) %>');
                    weatherStatus = weatherData.weather[0].main;
                }
                
                console.log(weatherStatus);

                
                

            </script>
            <i class="fa fa-sun"></i>
            <div class="temperature">
                <h1><%= weather && weather.main ? weather.main.temp : '-' %></h1>
                <button>Â°C</button>
            </div>
            <h2 id="location"><%= weather && weather.name && weather.sys? weather.name + ', '+ weather.sys.country  : "---,-"  %></h2>
            <div class="more-info">
                <div class="col">
                    <i id="wind-icon" class="fa-solid fa-wind"></i>
                    <div>
                        <p class="wind"><%= weather && weather.wind ? weather.wind.speed : '-' %> km/h</p>
                        <p>Wind Speed</p>
                    </div>
                </div>
                <div class="col">
                    <i id="humidity-icon" class="fa-solid fa-water"></i>
                    <div>
                        <p class="humidity"><%= weather && weather.main ? weather.main.humidity : '-' %> %</p>
                        <p>Humidity</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>